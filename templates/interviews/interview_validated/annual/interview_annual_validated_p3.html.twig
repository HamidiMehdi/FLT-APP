{% extends 'base.html.twig' %}

{% block title %}Entretien annuel validé{% endblock %}

{% block interview_item %}active{% endblock %}
{% block validatedInterviews %}active{% endblock %}

{% block body %}

    {# breadcrumbs #}
    <div class="row wrapper border-bottom white-bg page-heading margin-bottom-30">
        <div class="col-sm-12">
            <h2>Entretien annuel - {{ ai.employee.fullname }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('interview_validated_list') }}">Entretiens validés</a>
                </li>
                <li>
                    <a href="{{ path('show_interview_annual_validated', {id : ai.id, step: 1}) }}">Informations</a>
                </li>
                <li>
                    <a href="{{ path('show_interview_annual_validated', {id : ai.id, step: 2}) }}">Bilan</a>
                </li>
                <li class="active">
                    <strong>Compétences</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins border-bottom">
                <div class="ibox-title">
                    <h5>Legendes</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <label class="control-label">0 = Non évalué</label>
                        </div>
                        <div class="col-sm-12">
                            <label class="control-label">1 = Je n'ai pas la compétence</label>
                        </div>
                        <div class="col-sm-12">
                            <label class="control-label">2 = Notions</label>
                        </div>
                        <div class="col-sm-12">
                            <label class="control-label">3 = Autonome</label>
                        </div>
                        <div class="col-sm-12">
                            <label class="control-label">4 = Confirmé</label>
                        </div>
                        <div class="col-sm-12">
                            <label class="control-label">5 = Au-delà des attentes</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins border-bottom">
                <div class="ibox-title">
                    <h5>Savoir-être</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Libellé de la compétence</th>
                                <th>Note</th>
                                <th>Commentaire du collaborateur</th>
                                <th>Commentaire du manager</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for knowHow in ai.knowHows %}
                                <tr>
                                    <td>{{ knowHow.wordingSkill }}</td>
                                    <td>{{ knowHow.grade }}</td>
                                    <td>{{ knowHow.collabComment }}</td>
                                    <td>{{ knowHow.managerComment }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="row ">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label">Note moyenne</label>
                                <input type="text" value="{{ ai.knowHowAvg }}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row margin-bottom-30">
        <div class="col-lg-12">
            <div class="ibox float-e-margins border-bottom">
                <div class="ibox-title">
                    <h5>Savoir-faire</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Libellé de la compétence</th>
                                <th>Note</th>
                                <th>Commentaire du collaborateur</th>
                                <th>Commentaire du manager</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for knowMake in ai.knowMakes %}
                                <tr>
                                    <td>{{ knowMake.wordingSkill }}</td>
                                    <td>{{ knowMake.grade }}</td>
                                    <td>{{ knowMake.collabComment }}</td>
                                    <td>{{ knowMake.managerComment }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="row ">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label">Note moyenne</label>
                                <input type="text" value="{{ ai.knowMakeAvg }}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label">Commentaire du manager</label>
                                <input type="text" value="{{ ai.knowMakeComment }}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group text-right">
                                <a href="{{ path('show_interview_annual_validated', {id : ai.id, step: 4}) }}">
                                    <button class="btn btn-primary" type="button">Etape suivante</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}