{% extends 'base.html.twig' %}

{% block title %}Collaborateurs{% endblock %}

{% block working_item %}active{% endblock %}
{% block WorkingRequest %}active{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/datepicker/datepicker.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('plugins/datepicker/datepicker.min.js') }}"></script>
    <script src="{{ asset('js/workings/working_request_list.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="url_data_working_request" data-url="{{ path('working_request_search') }}"></div>

    <div class="row wrapper border-bottom white-bg page-heading margin-bottom-30">
        <div class="col-sm-12">
            <h2>Demandes collaborateurs</h2>
            <ol class="breadcrumb">
                <li class="active">
                    <strong>Liste des demandes collaborateurs</strong>
                </li>
            </ol>
        </div>
    </div>

    {# array #}
    <div class="row margin-bottom-30">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Liste des demandes de télétravail de vos collarateur</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="product_name">Nom</label>
                                <input type="text" id="search" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="product_name">Date</label>
                                <input type="text" id="date_filter" class="form-control flt-datepicker">
                                <label id="error_date_filter" class="error hidden">Le format doit être jj/mm/aaaa</label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="status">Statut</label>
                                <select id="status" class="form-control">
                                    <option value="pending" selected="">En attente</option>
                                    <option value="accepted">Accepté</option>
                                    <option value="refused">Refusé</option>
                                    <option value="report">Compte rendu à fournir</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    {% include 'workings/working_request/partial/working_request_item.html.twig' with {
                        'data' : workingData.data,
                        'pagination' : workingData.pagination
                    } %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}