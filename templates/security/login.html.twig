<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="FlowLineTechnologies">
    <title>FlowLine | Authentification</title>

    <link rel="stylesheet" type="text/css" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
    <link href="{{ asset('font-awesome/css/font-awesome.css') }}" rel="stylesheet">

    <link href="{{ asset('inspinia/css/animate.css') }}" rel="stylesheet">
    <link href="{{ asset('inspinia/css/style.css') }}" rel="stylesheet">
</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name login-name">PORTAIL</h1>
            </div>
            <h3>Authentification</h3>

            {% if error %}
                <div class="error-login">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_widget(form.email, {
                    'value': last_email,
                    'attr': {'class': 'form-control', 'placeholder': 'Email'}
                }) }}
                <label id="error_email" class="error hidden">Ce champs doit être renseigné</label>
            </div>

            <div style="margin-top: 10px"></div>

            {{ form_widget(form.submit, {
                'label' : 'Connexion',
                'attr': {'class': 'btn btn-primary block full-width m-b btn-submit', 'placeholder': 'Email'}
            }) }}
            {{ form_end(form) }}
        </div>
    </div>

<!-- Mainly scripts -->
<script src="{{ asset("js/jquery-2.1.1.js") }}"></script>
<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('js/login.js') }}"></script>

</body>
</html>